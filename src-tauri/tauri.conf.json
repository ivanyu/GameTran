{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gametran",
  "version": "0.1.0",
  "identifier": "com.gametran.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "title": "GameTran",
        "width": 800,
        "height": 600,
        "center": true,
        "closable": true,
        "create": true,
        "visible": false,
        "maximized": true,
        "fullscreen": true,
        "decorations": false,
        "transparent": true
      },
      {
        "label": "settings",
        "url": "settings.html",
        "title": "GameTran - Settings",
        "width": 400,
        "height": 100,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
